{
  "name": "aplikasi-kependudukan",
  "description": "Aplikasi ini untuk mendata data penduduk, pivot table, serta melakukan proses mudah ketika ada perpindahan penduduk atau mortalitas terjadi",
  "private": true,
  "version": "1.0.1",
  "author": {
    "name": "Muhammad Baiquni",
    "email": "muhammad.baiquni@gmail.com"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && set ELECTRON_DEV=1&& electron .\"",
    "electron:build": "npm run build && electron-builder",
    "postinstall": "electron-rebuild",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test:e2e": "start-server-and-test dev http://localhost:5173 cy:run",
    "test:electron": "playwright test -c playwright.electron.config.js",
    "test": "vitest",
    "test:unit": "vitest run"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.62.7",
    "antd": "^5.22.2",
    "better-sqlite3": "^11.8.1",
    "csv-parse": "^5.6.0",
    "dayjs": "^1.11.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.15.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@testing-library/cypress": "^10.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "@playwright/test": "^1.48.2",
    "concurrently": "^9.1.2",
    "cypress": "^15.9.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "jsdom": "^25.0.1",
    "start-server-and-test": "^2.1.3",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.7",
    "vite-plugin-electron": "^0.29.0",
    "vitest": "^2.1.8",
    "wait-on": "^8.0.1"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.penduduk.app",
    "productName": "Aplikasi Kependudukan",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/better-sqlite3/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    }
  }
}
